@model CategoryListVM
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Category</h1>
<hr />
@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px;">Id</td>

                <td>Name</td>
                <td>Description</td>

                <td style="width:150px;"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    

                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/category/@item.Id">Edit</a>
                        <form asp-controller="Admin" asp-action="DeleteCategory" method="post" style="display:inline">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}
