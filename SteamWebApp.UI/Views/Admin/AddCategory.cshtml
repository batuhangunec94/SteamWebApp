@model CategoryDTO
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Category</h1>

<br />

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="AddCategory" method="post">
            <div><p id="messages" style="color:red; font-size:20px"></p></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input name="name" asp-for="Name" value="" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label">Description</label>
                <div class="col-md-10">
                    <input name="description" asp-for="Description" value="" class="form-control" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Game</button>
                </div>
            </div>
        </form>
    </div>
</div>