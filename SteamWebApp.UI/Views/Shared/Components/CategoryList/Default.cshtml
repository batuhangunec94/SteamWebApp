@model CategoryListVM

<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        <a asp-controller="Home" asp-action="List" asp-route-category="@item.Name.ToLower()"
           class="list-group-item list-group-item-action @(Model.SelectedCategory==item.Name.ToLower()?"active" : "")">@item.Name</a>
    }

</div>