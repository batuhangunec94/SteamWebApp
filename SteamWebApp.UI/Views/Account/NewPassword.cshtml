@model NewPasswordModel
@{
    ViewData["Title"] = "NewPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section Scripts{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<style>
    img {
        float: left;
        position: relative;
        width: 600px;
        height: 500px;
        margin-top: 30px;
    }
</style>
<h1>Reset Password</h1>
<br />
<form asp-controller="Account" asp-action="NewPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">

            <div class="form-group row">
                <label asp-for="UserName" class="col-md-2 col-form-label">User Name</label>
                <div class="col-md-10">
                    <input asp-for="UserName" value=""  class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label">Password</label>
                <div class="col-md-10">
                    <input asp-for="Password" value="" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RePassword" class="col-md-2 col-form-label">RePassword</label>
                <div class="col-md-10">
                    <input asp-for="RePassword" value="" class="form-control" />
                    <span asp-validation-for="RePassword"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Reset</button>
                </div>
            </div>

        </div>

    </div>
</form>